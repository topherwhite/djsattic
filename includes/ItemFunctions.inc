<?phpfunction MakeImageAnItem($FileName,$Img_Dir,$ImgHorizRes,$EditMode){	$SourceFile = $Img_Dir . 'lrg.' . $FileName;	$dim = getimagesize($SourceFile);	$ImgVertRes =  floor($ImgHorizRes * ($dim[1] / $dim[0]));	$ResizedArea = $ImgHorizRes * $ImgVertRes;		if 		($EditMode == 1)							   $Img_Tag = 'edit.'; 			// Use Edit Mode version 	elseif (($EditMode == 0) && ($ResizedArea <= 24300))   $Img_Tag = 'mini.'; 			// Use 180 x 135 version 	elseif (($EditMode == 0) && ($ResizedArea <= 43200))   $Img_Tag = 'thmb.'; 			// Use 240 x 180 version 	elseif (($EditMode == 0) && ($ResizedArea <= 84672))   $Img_Tag = 'sml.';  			// Use 336 x 252 version 	elseif (($EditMode == 0) && ($ResizedArea <= 158700))  $Img_Tag = 'med.';  			// Use 460 x 345 version 	else												  	$Img_Tag = 'lrg.';			// Use 'Large' version   	$TargetImageFile = $Img_Dir . $Img_Tag . $FileName;	return ( '<img class="item" src="' . $TargetImageFile . '" width="' . $ImgHorizRes . '" height="' . $ImgVertRes . '" />' );}function AudioListItem($ItmWidth,$EditMode,$id,$lst,$lnk,$ThemeColor){	if ($EditMode == 1)	$pl = 0;	else	$pl = $lst;$key = dechex(mktime());$FrHt = floor($ItmWidth*1.5);$output=		'<iframe'	.	" src=\"../user/aud_itm.php?wdth={$ItmWidth}&ht={$FrHt}&id={$id}&pl={$pl}&lnk={$lnk}&th={$ThemeColor}&key={$key}&win=no\""	.	' style="'	.	'display:table-row;'	.	'width:' . $ItmWidth . 'px;'	.	'height:' . $FrHt . 'px;'	.	"background-color:#{$ThemeColor};"	.	'border:none;'	.	'"></iframe>'	;return $output;}function ImageListItem($ItmWidth,$EditMode,$id,$alb,$lnk,$ThemeColor,$NumPhotos){	if ($EditMode == 1)	$pl = 0;	else	$pl = $alb;$key = dechex(mktime());$FrHt = floor($ItmWidth*1.5);$output=		'<iframe'	.	" src=\"../user/alb_itm.php?wdth={$ItmWidth}&ht={$FrHt}&id={$id}&pl={$pl}&lnk={$lnk}&th={$ThemeColor}&key={$key}&num={$NumPhotos}\""	.	" name=\"album{$alb}\""	.	' style="'	.	'display:table-row;'	.	'width:' . $ItmWidth . 'px;'	.	'height:' . $FrHt . 'px;'	.	"background-color:#{$ThemeColor};"	.	'border:none;'	.	'"></iframe>'	;return $output;}?>