estroy($sess_id){	global $connection;	global $sess_tble;	$delete_query = "DELETE FROM {$sess_tble} WHERE session_id = '{$sess_id}'";	if (!(mysql_query($delete_query,$connection)))					showerror();	return true;}function sessionGC($max_lifetime){	global $connection;	global $sess_tble;	$current_time = getMicroTime();	$delete_query = "DELETE FROM {$sess_tble} WHERE last_accessed < ({$current_time}-{$max_lifetime})";	if (!(mysql_query($delete_query,$connection)))					showerror();	return true;}session_set_save_handler("sessionOpen","sessionClose","sessionRead","sessionWrite","sessionDestroy","sessionGC");?>