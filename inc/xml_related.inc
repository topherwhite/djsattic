<?phpfunction XML_clean_str($string,$maxlength){		//Check length. Truncate if necessary.	if (strlen($string) >= $maxlength)	$newstr = substr($string,0,$maxlength) . "...";	else								$newstr = $string;		//Escape Illegal XML characters	$outstr =	str_replace("\"","&quot;",					str_replace("`","&apos;",						str_replace("'","&apos;",							str_replace(">","&gt;",								str_replace("<","&lt;",									str_replace("&","&amp;",										$newstr	)	)	)	)	)	);	return $outstr;}?>